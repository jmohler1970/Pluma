


<h3>Manage Links</h3>	

<table class="edittable highlight paginate">
<thead>
<tr>
	<th>Category</th>
	<th>Title</th>
	<th>Target</th>
	<th></th>
	<th>Delete Link</th>
</tr>
</thead>
<cfoutput query="rc.qryLink">
<tr>
	<td>#type# <cfif type EQ ""><i>None</i></cfif>
	
		<input type="hidden" name="key_#currentrow#" 		value="#htmleditformat(type)#|#htmleditformat(href)#" />
		<input type="hidden" name="type_#currentrow#" 	value="#type#" />
	</td>
	
	<td>
    	<input type="text" name="message_#currentrow#" value="#htmleditformat(message)#" />  
	</td>
		

	<td>
		<input type="text" name="href_#currentrow#" value="#htmleditformat(href)#" size="30" />
	
		<a href="#href#" target="_blank"  class="edit-nav">Go</a>
	</td>
	
	<td>
		<select name="position_#currentrow#" class="input-mini">
			<cfloop from="1" to="#rc.qryLink.recordcount#" index="j">
				<option value="#j#" <cfif j EQ currentrow>selected="selected"</cfif>>#j#</option>
			</cfloop>
		</select> 
	</td>
	
	<td style="text-align : center;">
		<input type="checkbox" name="delete_#currentrow#" value="1" />
	
	</td>
</tr>
</cfoutput>
</table>


<cfoutput>
	<p><i><b>#rc.qryLink.recordcount#</b> total links</i></p>
</cfoutput>

<!--- add form --->

<cfset linkitem = rc.qryLink.recordcount + 1>


<h3 class="floated">Add Link</h3>

<cfoutput>
<div class="edit-nav clearfix">	
		<a class="edit-nav" href="#buildURL(action = 'pages.linkcategory')#"> Edit Link Category</a>
</div>

<input type="hidden" name="key_#linkitem#" value="" />


<p class="floated">
	<b>Link Category</b>
	<br />
  	<select name="type_#linkitem#" class="text">
    	<option></option>
		<cfloop query="rc.qryLinkCategory">
			<option value="#Title#">#Title#</option>		
		</cfloop>
	</select>
</p>
	

<p>
   	<b>Label</b>
   	<br />
	<input type="text" name="message_#linkitem#" class="text" />
    
</p>
	
	
<p>
	<b>Target URL</b>
    <br />   
   	<input type="text" name="href_#linkitem#" placeholder="http://" class="text" />
</p>
</cfoutput>
